<!DOCTYPE html>
<html lang="en">
  <head>
    <%pageName = post.title;%>
     <%- include('partials/head') %>
    <style>
      .sidebar{
        margin-top: 1em;
      }
        
    #commentsContainer {
        max-height: 400px; /* Limit height for scrolling if many comments */
        overflow-y: auto;
    }
    textarea#commentInput {
        resize: none; /* Disable resizing for better layout control */
    } 
    
    .dream-post-container {
    border: 1px solid #ddd;
    padding: 15px;
    border-radius: 8px;
    background: #fff;
    margin-bottom: 20px;
  }
  .post-picture img {
    border-radius: 8px;
  }
  .dream-title {
    font-size: 1.5rem;
    color: #333;
  }
  .dream-meta {
    font-size: 0.9rem;
    color: #777;
  }
  .dream-actions button {
    font-size: 0.9rem;
  }
  .dream-comments {
    margin-top: 20px;
    border-top: 1px solid #ddd;
    padding-top: 15px;
  }
    .comment-item {
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      background: #f9f9f9;
    }
  
    </style>
  </head>
  <body>
    <%- include('partials/topbar') %>

    <div class="container">
      <div class="row">
        <!-- Sidebar -->
        <%- include('partials/dreamsidebar') %>
        
        <main class="col-md-9 main-content">
          <!-- Include the tray for applied filter and navigation -->
          <%- include('partials/postTray', { post: post }) %>
        
          <!-- Placeholder for post results -->
          
          </div>
        </main>
    
       
      
      
    
   
     <%- include('partials/footer') %>
    
     <script>
      document.addEventListener('DOMContentLoaded', async function() {
        const postId = '<%= post._id %>';
        const response = await fetch(`/post/${postId}/liked`, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json'
            }
        });
        const data = await response.json();
        const likeButton = document.getElementById('likeButton');
        if (data.liked) {
            likeButton.classList.remove('far');
            likeButton.classList.add('fas');
        } else {
            likeButton.classList.remove('fas');
            likeButton.classList.add('far');
        }
    });
      document.getElementById('likeForm').addEventListener('submit', async function(event) {
          event.preventDefault();
          const form = event.target;
          const action = form.action;
          const response = await fetch(action, {
              method: 'POST',
              headers: {
                  'Content-Type': 'application/json'
              }
          });
          const data = await response.json();
          document.getElementById('likeCount').innerText = `${data.likes} Likes`;
          const likeButton = document.getElementById('likeButton');
        if (data.liked) {
            likeButton.classList.remove('far');
            likeButton.classList.add('fas');
        } else {
            likeButton.classList.remove('fas');
            likeButton.classList.add('far');
        }
      });
      document.getElementById('commentForm').addEventListener('submit', async function(event) {
        event.preventDefault();
        console.log("hereree");
        const form = event.target;
        const action = form.action;
        const commentContent = document.getElementById('commentInput').value;
        
        const response = await fetch(action, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ content: commentContent })
        });
        if (response.ok) {
            console.log("response ok");
            const data = await response.json();
            location.reload();
        } else {
            console.error('Failed to post comment');
        }
    });
    
  </script>
  </body>
</html>