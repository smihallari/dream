<div class="tray bg-light p-3 mb-3 border rounded">
    <div class="d-flex justify-content-between align-items-center">
      <% var diff = (goat) ? 'Trending now' : 'Currently competing' %>
      <h6 class="mb-0"><%= appliedFilter || diff %></h6>
      <div class="pagination-container d-flex align-items-center text-dark">
        <% if (pagination.prev) { %>
          <a href="<%= pagination.prev %>" class="btn btn-sm me-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="me-1" viewBox="0 0 24 24">
              <title>Previous</title>
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
            Back
          </a>
        <% } %>
  
        <!-- Render page numbers -->
        <% for (let i = 1; i <= pagination.totalPages; i++) { %>
          <a href="/dreamList?page=<%= i %>" 
             class="btn btn-sm <%= i === pagination.currentPage ? 'btn-primary' : 'btn-outline-primary' %> me-2">
            <%= i %>
          </a>
        <% } %>
  
        <% if (pagination.next) { %>
          <a href="<%= pagination.next %>" class="btn btn-sm">
            Next
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="ms-1" viewBox="0 0 24 24">
              <title>Next</title>
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </a>
        <% } %>
      </div>
    </div>
  </div>
  