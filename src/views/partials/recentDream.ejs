<li class="card mb-3 border-0">
  <div class="d-flex bg-body-tertiary">
    <!-- Left: Image -->
    <div class="flex-shrink-0">
      <a href="/posts/<%= dream._id %>">
        <% if (dream.image) { %>
          <img src="data:image/jpeg;base64,<%= dream.image.toString('base64') %>" 
               alt="<%= dream.title %>" 
               class="rounded" 
               style="width: 120px; height: 120px; object-fit: cover;">
        <% } else { %>
          <svg class="rounded" width="120" height="120" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false">
            <rect width="100%" height="100%" fill="#777"></rect>
          </svg>
        <% } %>
      </a>
    </div>

    <!-- Right: Text Content -->
    <div class="flex-grow-1 ms-3" style="margin-top: 6%;">
      <!-- Title -->
      <h5 class="mb-1">
        <a href="/post/<%= dream._id %>" class="text-decoration-none text-primary">
          <%= dream.title %>
        </a>
      </h5>
      <!-- Author -->
      <small class="text-muted">
        by <a href="/profile/<%= dream.authorId %>" class="text-decoration-none text-body-secondary">
          <%= dream.author %>
        </a>
      </small>
      <!-- Date -->
      <small class="d-block text-body-secondary">
        <%= dream.timeAgo %>
      </small>
    </div>
  </div>
</li>