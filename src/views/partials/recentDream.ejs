<li class="card mb-3 border-0" style="height: 150px;">
  <a href="/posts/<%= dream._id %>" class="d-flex h-100 text-decoration-none">
    <!-- Left: Image -->
    <div class="d-flex align-items-center justify-content-center" style="flex: 1; max-width: 50%;">
      <% if (dream.image) { %>
        <img src="data:image/jpeg;base64,<%= dream.image.toString('base64') %>" 
             alt="<%= dream.title %>" 
             class="rounded w-100 h-100" 
             style="object-fit: cover;">
      <% } else { %>
        <svg class="rounded w-100 h-100" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false">
          <rect width="100%" height="100%" fill="#777"></rect>
        </svg>
      <% } %>
    </div>

    <!-- Right: Text -->
    <div class="d-flex flex-column justify-content-center p-3" style="flex: 1; max-width: 50%;">
      <!-- Title -->
      <h5 class="mb-1 text-primary">
        <%= dream.title %>
      </h5>
      <!-- Author with link -->
      <small class="text-muted">
        by <a href="/profile/<%= dream.authorId %>" class="text-decoration-none text-body-secondary"><%= dream.author %></a>
      </small>
      <!-- Date -->
      <small class="text-body-secondary">
        <%= dream.timeAgo %>
      </small>
    </div>
  </a>
</li>