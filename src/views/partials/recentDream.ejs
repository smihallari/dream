<li class="card mb-3 border-0 bg-body-secondary">
  <div class="d-flex">

    <div class="flex-shrink-0">
      <a href="/post/<%= dream._id %>">
        <% if (dream.image) { %>
          <img src="data:image/jpeg;base64,<%= dream.image.toString('base64') %>" 
               alt="<%= dream.title %>" 
               class="rounded" 
               style="width: 120px; height: 120px; object-fit: cover;">
        <% } else { %>
            <img src="/photos/thumbnail.png" style="width: 80px;margin-top:35%;  object-fit: cover;">
          
        <% } %>
      </a>
    </div>


    <div class="flex-grow-1 ms-3" style="margin-top: 6%;">

      <h5 class="mb-1">
        <a href="/post/<%= dream._id %>" class="text-decoration-none text-dark">
          <%= dream.title %>
        </a>
      </h5>

      <small class="text-muted">
        by <a href="/profile/<%= dream.author.username %>" class="text-decoration-none text-body-secondary">
          <%= dream.author.username %>
        </a>
      </small>

      <small class="d-block text-body-secondary">
        <%= dream.timeAgo %>
      </small>
    </div>
  </div>
</li>