                    </article>
                </div>





                <div class="col-md-5">
                    <div class="container">
                        <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <% if (posts && posts.length > 0) { %>
                                  <% posts.forEach((post, index) => { %>
                                    <%- include('partials/carouselItem', { post, isActive: index === 0 }) %>
                                  <% }); %>
                                <% } else { %>
                                  <div class="carousel-item active">
                                    <div class="col-md-12 mx-auto">
                                      <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                                        <div class="col p-4 d-flex flex-column position-static">
                                          <strong class="d-inline-block mb-2 text-primary-emphasis">No Posts Available</strong>
                                          <h3 class="mb-0">Welcome to Dreamcatchr</h3>
                                          <div class="mb-1 text-body-secondary">Today</div>
                                          <p class="card-text mb-auto">No posts are available at the moment. Please check back later or create a new post.</p>
                                          <a href="/create_post" class="icon-link gap-1 icon-link-hover stretched-link">Create a Post</a>
                                        </div>
                                        <div class="col-auto d-none d-lg-block">
                                          <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">No image</text></svg>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                <% } %>
                              </div>
                              <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                              </button>
                              <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                              </button>
                            </div>

                        <div class="p-4 mb-3 bg-body-secondary rounded">
                            <h4 class="fst-italic">Recent dreams</h4>
                            <ul class="list-unstyled">
                              <% if (recentDreams && recentDreams.length > 0) { %>
                                <% recentDreams.forEach(dream => { %>
                                  <%- include('partials/recentDream', { dream }) %>
                                <% }); %>
                              <% } else { %>
                                <li>
                                No recent dreams available. 
                                <a href="/create_post">Be the first to share your dream!</a>
                              </li>
                              <% } %>
                            </ul>
                          </div>
                          
                        

                        <div class="p-4">
                            <h4 class="fst-italic">Archives</h4>
                            <ol class="list-unstyled mb-0" id="archives-list">
                                <% archives.forEach(archive => { %>
                                <%- include('partials/archive', { archive }) %>
                                <% }); %>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>




        </main>
        
        <%- include('partials/footer') %>

        
    </body>
</html>