        <script>
            document.addEventListener('DOMContentLoaded', () => {
                  const editProfile = document.getElementById('edit_profile');
                  if (editProfile) {
                        editProfile.addEventListener('click', async (e) => {
                        const username = '<%= user.username %>'; // Ensure this is correctly passed from server-side
                        window.location.href = `/profile_settings/${username}`;
                        
                    });
                  }
              });
            </script>
