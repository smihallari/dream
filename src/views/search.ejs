<!DOCTYPE html>
<html lang="en">
<head>
  <% pageName = "search: " + searchTerm; %>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/topbar') %>

  <div class="container mt-4">
    
    <div class="mb-3">
      <h1>Search Results for: "<%= searchTerm %>"</h1>
    </div>
  
    
    <div id="search-results">
      
      <div>
        <h6>Posts</h6>
        <% if (posts.length > 0) { %>
          <% posts.forEach((post) => { %>
            <%- include('partials/searchlistingpost', { post }) %>
          <% }); %>
        <% } else { %>
          <p>No posts found.</p>
        <% } %>
      </div>
  
      
      <div class="mt-4">
        <h6>Users</h6>
        <% if (users.length > 0) { %>
          <% users.forEach((user) => { %>
            <%- include('partials/searchlistinguser', { user }) %>
          <% }); %>
        <% } else { %>
          <p>No users found.</p>
        <% } %>
      </div>
    </div>
  </div>
  
  <%- include('partials/footer') %>
</body>
</html>
