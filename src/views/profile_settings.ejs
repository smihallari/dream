<!DOCTYPE html>
<html lang="en">
    <head>
        <%pageName = profileUser.username+"'s Settings";%>
        <%- include('./partials/head') %>
    </head>
    <body>

        <%- include('partials/topbar') %>

        <<div class="container d-flex flex-column align-items-center">
          <div class="main-body w-100" style="max-width: 1200px;">
            <h1 class="text-center">Edit your profile:</h1>
        
            <div class="row gutters-sm justify-content-center">
              <form action="/profile_settings/<%= user.username %>" method="post" enctype="multipart/form-data" class="w-100">
                <div class="col-md-4 mb-3 mx-auto">
                  <div class="card">
                    <div class="card-body">
                      <div class="d-flex flex-column align-items-center text-center">
                        <% if (!user.image || user.image === '') { %>
                          <img src="https://bootdey.com/img/Content/avatar/avatar7.png" 
                              alt="Default Avatar" class="rounded-circle" width="150">
                          <div class="mt-3">
                            <input type="file" name="profileImage" class="form-control mt-2">
                          </div>
                        <% } else { %>
                          <img src="<%= user.image %>" 
                               alt="Profile Picture" class="rounded-circle" width="150">
                          <div class="mt-3">
                            <button class="btn btn-primary mt-2" type="button">Change photo</button>
                            <button class="btn btn-danger mt-2" type="button">Delete photo</button>
                          </div>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
        
                <div class="col-md-8 mx-auto">
                  <div class="card mb-3">
                    <div class="card-body">
                      <div class="row mb-3">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <input type="text" class="form-control" name="newName" value="<%= user.name %>">
                        </div>
                      </div>
                      <div class="row mb-3">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Surname</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <input type="text" class="form-control" name="newSurname" value="<%= user.surname %>">
                        </div>
                      </div>
                      <div class="row mb-3">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Username</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <input type="text" class="form-control" name="newUsername" value="<%= user.username %>">
                        </div>
                      </div>
                      <div class="row mb-3">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <input type="text" class="form-control" name="newEmail" id="email" value="<%= user.email %>">
                        </div>
                      </div>
                      <div class="row mb-3">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Bio</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <input type="text" class="form-control" name="newBio" id="bio" value="<%= user.bio %>">
                        </div>
                      </div>
                      <div class="row mb-3">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Twitter</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <input type="text" class="form-control" name="newTwitter" id="twitter" value="<%= user.twitter %>">
                        </div>
                      </div>
                      <div class="row mb-3">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Facebook</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <input type="text" class="form-control" name="newFacebook" id="facebook" value="<%= user.facebook %>">
                        </div>
                      </div>
                      <div class="row mb-3">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Instagram</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <input type="text" class="form-control" name="newInstagram" id="instagram" value="<%= user.instagram %>">
                        </div>
                      </div>
                      <div class="row mb-3">
                        <div class="col-sm-3">
                          <h6 class="mb-0">New Password</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <input type="password" class="form-control" name="newPassword" id="password">
                        </div>
                      </div>
                      <% if (typeof errorMessage !== 'undefined') { %>
                        <div class="alert alert-danger mt-3"><%= errorMessage %></div>
                      <% } %>
        
                      <div class="row mt-4 justify-content-center">
                        <div class="col-sm-6 d-flex justify-content-around">
                          <button class="btn btn-primary" type="submit">Save changes</button>
                          <button class="btn btn-danger" type="submit" formaction="/profile_settings/<%= user.username %>/delete">Delete Account</button>
                        </div>
                      </div>
        
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        
            <%- include('./partials/footer') %>
    </body>
</html>

